#!/usr/bin/env bash

Ish=$(dirname $(cd $( dirname "${BASH_SOURCE[0]}" ) && pwd ))
chmod +x $Ish/etc/ish
mkdir -p $Ish/doc

alias ls="ls -G"
alias gp="git add *; git commit -am saving; git push; git status"
alias vi='vim -u $Ish/etc/dotvimrc'
alias tmux='tmux -f $Ish/etc/dottmux'
alias pdoc="pdoc3 --config sort_identifiers=False -o $Ish/docs --force --html "

doc()  { (cd $Ish/src; for py in *.py; do pdoc $py; done); }
here() { cd $1; basename `pwd`; }

PROMPT_COMMAND='echo -ne "ğŸ‘¯ $(git branch 2>/dev/null | grep '^*' | colrm 1 2):";PS1="$(here ..)/$(here .):\!\e[m â–¶ "'
