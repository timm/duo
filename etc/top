#if [ $0 -nt $1 ]; then
  echo "# $1 ..."
  cat $1 | gawk '
  BEGIN  {
    forks=  "'/tmp/forks$$'"
    heads=  "'/tmp/heads$$'"
    maths=  "'/tmp/maths$$'"
    buttons=  "'/tmp/button$$'"
    RS=""
    getline head < heads
    getline math < maths
    getline fork < forks
    getline button < buttons
    close(heads)
    close(maths)
    close(forks)
    close(buttons)
    RS="\n"
  }
  /^<\/head>/      { print math }
  /<h1>/           { sub(/<h1>/,"<h1>\\&nbsp;DUO: ") ;print fork;print $0 ; next }
  /<div class=.octowrap.>/ && head { print head button; head="";}
  #/<p>/ && button { print head button; button="" }
                   { print }

  ' > /tmp/$$new

  cp /tmp/$$new $1

#fi
